@model IMS.Models.ProductUnit
@using IMS.Models 

@{
    ViewData["Title"] = "Create Unit of Measure"; // Translated
    Layout = "_Layout";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7 col-xl-6">
            @* Налаштуйте ширину за потребою *@
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="mb-0 h4">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    @* <hr /> -- Прибрано, оскільки заголовок тепер у card-header *@
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UnitCode" class="form-label fw-semibold"></label>
                            <input asp-for="UnitCode" class="form-control form-control-sm" />
                            <span asp-validation-for="UnitCode" class="text-danger small"></span>
                            <div class="form-text small">Code must be unique (e.g., 'kg', 'pcs', 'm').</div> @* Translated & smaller text *@
                        </div>
                        <div class="mb-3">
                            <label asp-for="UnitName" class="form-label fw-semibold"></label>
                            <input asp-for="UnitName" class="form-control form-control-sm" />
                            <span asp-validation-for="UnitName" class="text-danger small"></span>
                        </div>

                        <hr class="my-4"> @* Розділювач перед кнопками *@

                        <div class="d-flex justify-content-end">
                            @* Вирівнювання кнопок праворуч *@
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="bi bi-x-circle me-1"></i>Cancel @* Translated & Icon *@
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Create @* Translated & Icon *@
                            </button>
                        </div>
                    </form>
                </div> @* end card-body *@
            </div> @* end card *@
        </div> @* end col *@
    </div> @* end row *@
</div> @* end container *@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}