@model IMS.ViewModels.StorageKeeperDetailsViewModel

@{
    ViewData["Title"] = ViewData["Title"] ?? $"Деталі комірника: {Model.Keeper.PhoneNumber}";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Профіль комірника</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Keeper.LastName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Keeper.LastName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Keeper.FirstName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Keeper.FirstName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Keeper.PhoneNumber)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Keeper.PhoneNumber)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Keeper.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Keeper.Email)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Keeper.StorageNameNavigation)</dt>
        <dd class="col-sm-9">
            @if (Model.Keeper.StorageNameNavigation != null)
            {
                <a asp-controller="Storage" asp-action="Details" asp-route-name="@Model.Keeper.StorageName">
                    @Model.Keeper.StorageNameNavigation.Name
                </a>
            }
            else
            {
                <text>Н/Д</text>
            }
        </dd>

        <dt class="col-sm-3">Прив'язаний логін</dt>
        <dd class="col-sm-9">
            @if (Model.Keeper.User != null)
            {
                <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@Model.Keeper.UserId">
                    @Model.Keeper.User.Username
                </a>
            }
            else
            {
                <span class="text-muted">-- Немає --</span>
            }
        </dd>
    </dl>
</div>

@if (Model.ShowInvoices)
{
    <div class="mt-4">
        <h4>Накладні, пов'язані з комірником</h4>
        <hr />
        @if (Model.RelatedInvoices.Any())
        {
            <table class="table table-sm table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Дата</th>
                        <th>Тип</th>
                        <th>Статус</th>
                        <th></th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model.RelatedInvoices)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Invoice" asp-action="Details" asp-route-id="@invoice.InvoiceId">@invoice.InvoiceId</a>
                            </td>
                            <td>@invoice.Date.ToString("dd.MM.yyyy")</td>
                            <td>@invoice.Type</td>
                            <td>@invoice.Status</td>
                            <td>
                                <a asp-controller="Invoice" asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-sm btn-outline-info">Деталі</a>
                                @* Тут НЕ додаємо Edit/Delete для накладних *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">З цим комірником ще немає пов'язаних накладних.</p>
        }
    </div>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-phoneNumber="@Model.Keeper.PhoneNumber" class="btn btn-secondary">Редагувати профіль</a> |
    <a asp-action="Delete" asp-route-phoneNumber="@Model.Keeper.PhoneNumber" class="btn btn-danger">Видалити профіль</a> |
    @if (!Model.ShowInvoices)
    {
        <a asp-controller="Storage" asp-action="Details" asp-route-name="@Model.Keeper.StorageName">Назад до складу</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-outline-secondary">Назад до списку комірників</a>
    }
</div>