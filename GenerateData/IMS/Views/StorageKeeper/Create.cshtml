@model IMS.ViewModels.StorageKeeperViewModel

@{
    ViewData["Title"] = ViewData["Title"] ?? "Створити комірника";
    Layout = "_Layout";
    bool isStoragePreselected = !string.IsNullOrEmpty(Model.StorageName);
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+380XXXXXXXXX" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <div class="form-text">Телефон використовується як унікальний ідентифікатор.</div>
            </div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StorageName" class="form-label"></label>
                @if (isStoragePreselected)
                {
                    <input type="hidden" asp-for="StorageName" />
                    <p class="form-control-plaintext"><strong>@Model.StorageName</strong></p>
                }
                else
                {
                    <select asp-for="StorageName" class="form-select" asp-items="@Model.AvailableStorages">
                        <option value="">-- Оберіть склад --</option>
                    </select>
                    <span asp-validation-for="StorageName" class="text-danger"></span>
                }
            </div>

            <div class="mb-3 mt-4">
                <button type="submit" class="btn btn-primary">Створити профіль</button>
                <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
 }