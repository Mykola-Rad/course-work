@model IMS.Models.StorageKeeper

 @{
     ViewData["Title"] = $"Видалити комірника: {Model.FirstName} {Model.LastName} ({Model.PhoneNumber})";
     Layout = "_Layout";
     bool canDelete = ViewBag.CanDelete ?? true;
 }

 <h1>@ViewData["Title"]</h1>

 <h3 class="text-danger">Ви впевнені, що хочете видалити цей профіль комірника?</h3>

 @if (!canDelete && ViewBag.WarningMessage != null)
 {
     <div class="alert alert-warning" role="alert">
         @ViewBag.WarningMessage <br />
         Видалення неможливе, доки існують ці залежності.
     </div>
 }
 else
 {
      <p class="text-danger">Ця дія видалить профіль комірника остаточно!</p>
 }


 <div>
     <hr />
     <dl class="row">
         <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.LastName)</dt>
         <dd class = "col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

         <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.FirstName)</dt>
         <dd class = "col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

         <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
         <dd class = "col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

         <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
         <dd class = "col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

          <dt class = "col-sm-3">@Html.DisplayNameFor(model => model.StorageNameNavigation)</dt>
         <dd class = "col-sm-9">@Html.DisplayFor(model => model.StorageNameNavigation.Name)</dd>

          <dt class = "col-sm-3">Прив'язаний логін</dt>
          <dd class = "col-sm-9">@(Model.User?.Username ?? "-- Немає --")</dd>
     </dl>

     <form asp-action="Delete" method="post">
         @Html.AntiForgeryToken()
         <input type="hidden" asp-for="PhoneNumber" />

         @if (canDelete)
         {
              <button type="submit" class="btn btn-danger">Так, Видалити Профіль</button>
         }
         else
         {
              <button type="submit" class="btn btn-danger" disabled title="@ViewBag.WarningMessage">Видалити Профіль</button>
         }
           | <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
     </form>
 </div>