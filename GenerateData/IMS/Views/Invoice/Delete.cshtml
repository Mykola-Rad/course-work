@model IMS.Models.Invoice
@using IMS.Models

@{
    ViewData["Title"] = $"Delete Invoice No. {Model.InvoiceId}"; // Translated
    Layout = "_Layout";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="mb-0 h4">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Warning!</h4> @* Translated *@
                        <p>Are you sure you want to delete this draft invoice? <strong>This action is irreversible!</strong></p> @* Translated *@
                    </div>

                    <h5 class="mt-4">Details of the invoice to be deleted:</h5> @* Translated *@
                    <hr />
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Invoice ID:</dt> @* Translated *@
                        <dd class="col-sm-8">@Model.InvoiceId</dd>

                        <dt class="col-sm-4 text-muted">Date:</dt> @* Translated *@
                        <dd class="col-sm-8">@Model.Date.ToString("dd.MM.yyyy")</dd>

                        <dt class="col-sm-4 text-muted">Type:</dt> @* Translated *@
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4 text-muted">Status:</dt> @* Translated *@
                        <dd class="col-sm-8">@Model.Status</dd>

                        @if (!string.IsNullOrEmpty(Model.CounterpartyName))
                        {
                            <dt class="col-sm-4 text-muted">Counterparty:</dt> @* Translated *@
                            <dd class="col-sm-8">@Model.CounterpartyName</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.SenderStorageName))
                        {
                            <dt class="col-sm-4 text-muted">Sender Storage:</dt> @* Translated *@
                            <dd class="col-sm-8">@Model.SenderStorageName</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.ReceiverStorageName))
                        {
                            <dt class="col-sm-4 text-muted">Receiver Storage:</dt> @* Translated *@
                            <dd class="col-sm-8">@Model.ReceiverStorageName</dd>
                        }
                    </dl>

                    <hr class="my-4">

                    <form asp-action="Delete" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="InvoiceId" />
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" asp-route-id="@Model.InvoiceId" class="btn btn-secondary me-2">
                                <i class="bi bi-x-circle me-1"></i>Cancel @* Translated *@
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash3-fill me-1"></i>Yes, Delete Draft @* Translated *@
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}