@using System.Security.Claims 
 @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* Підключаємо наш оновлений CSS *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/IMS.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <div class="page-wrapper">
        @* Обгортка для притискання футера *@
        <aside class="sidebar">
            <div class="sidebar-sticky">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">IMS</a>

                @* Викликаємо Partial View для навігації *@
                <partial name="_SideNavPartial" />

                @* Додаємо інформацію про користувача та кнопку виходу внизу панелі *@
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="user-info">
                        <div>Привіт, @User.Identity.Name!</div>
                        <div class="text-muted" style="font-size: 0.8em;">Роль: @User.FindFirstValue(System.Security.Claims.ClaimTypes.Role)</div>
                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="mt-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-secondary w-100">Вийти</button>
                        </form>
                    </div>
                }
            </div>
        </aside>

        <main role="main" class="main-content">
            @RenderBody()
        </main>

    </div> @* Кінець page-wrapper *@

    @* Футер можна розмістити тут, якщо він не має бути всередині main-content *@
    <footer class="border-top footer text-muted" style="margin-left: 250px;">
        @* Додаємо відступ для футера *@
        <div class="container-fluid">
            @* Або просто container *@
            &copy; @DateTime.Now.Year - IMS - Inventory Management System
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>