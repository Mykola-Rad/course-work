@model X.PagedList.IPagedList<IMS.Models.Counterparty>
@using IMS.Models
@using X.PagedList 

@{
    bool showRoles = ViewData["ShowRolesColumn"] as bool? ?? false;
    bool showActions = ViewData["ShowActionColumn"] as bool? ?? false;
    bool fullActions = ViewData["ShowFullActions"] as bool? ?? false; 

    int colspan = 3; 
    if (showRoles) colspan++;
    if (showActions) colspan++;
}

<table class="table table-sm table-hover">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
            @if (showRoles)
            {
                <th>Ролі</th>
            }
            @if (showActions)
            {
                <th>Дії</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any()) 
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>

                    @if (showRoles)
                    {
                        <td>
                            @if (item.Roles != null && item.Roles.Any())
                            {
                                @foreach (var role in item.Roles.OrderBy(r => r.Name))
                                {
                                    string badgeClass = role.Name?.ToLowerInvariant() switch
                                    {
                                        "supplier" => "text-bg-primary",
                                        "customer" => "text-bg-success",
                                        _ => "text-bg-secondary"
                                    };
                                    <span class="badge rounded-pill @badgeClass me-1">@role.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic">-- Немає --</span>
                            }
                        </td>
                    }

                    @if (showActions)
                    {
                        <td>
                            <a asp-controller="Counterparty" asp-action="Details" asp-route-name="@item.Name" class="btn btn-sm btn-outline-info">Деталі</a>
                            @if (fullActions) 
                            {
                                <text> | </text>
                                <a asp-controller="Counterparty" asp-action="Edit" asp-route-name="@item.Name" class="btn btn-sm btn-outline-secondary">Редагувати</a>
                                <text> | </text>
                                <a asp-controller="Counterparty" asp-action="Delete" asp-route-name="@item.Name" class="btn btn-sm btn-outline-danger">Видалити</a>
                            }
                        </td>
                    }
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="@colspan" class="text-center text-muted">Контрагентів за вашим запитом не знайдено.</td>
            </tr>
        }
    </tbody>
</table>