@model IMS.ViewModels.CounterpartyViewModel

@{
    ViewData["Title"] = "Створити контрагента";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="form-text">Назва має бути унікальною.</div>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Призначити Ролі</label>
                <div class="border p-2 rounded">
                    @if (Model.RolesCheckboxes != null && Model.RolesCheckboxes.Any())
                    {
                        @for (int i = 0; i < Model.RolesCheckboxes.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model.RolesCheckboxes[i].Id" /> 
                                <input type="hidden" asp-for="@Model.RolesCheckboxes[i].Name" /> 
                                <input class="form-check-input" type="checkbox"
                                       name="SelectedRoleIds" 
                                       value="@Model.RolesCheckboxes[i].Id"
                                       id="role_@Model.RolesCheckboxes[i].Id"
                                       asp-for="@Model.RolesCheckboxes[i].IsAssigned" /> 
                                <label class="form-check-label" for="role_@Model.RolesCheckboxes[i].Id">
                                    @Model.RolesCheckboxes[i].Name
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Немає доступних ролей для призначення.</p>
                    }
                </div>
            </div>


            <div class="mb-3 mt-4">
                <button type="submit" class="btn btn-primary">Створити</button>
                <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
 }