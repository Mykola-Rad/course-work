@model X.PagedList.IPagedList<IMS.Models.StorageProduct>
@using IMS.Models
@using X.PagedList.Mvc.Core
@using X.PagedList

@{
    ViewData["Title"] = "Товари з низькими залишками";
    Layout = "_Layout";
    var currentSearch = ViewData["CurrentSearch"] as string;
    var currentUnitFilter = ViewData["CurrentUnitFilter"] as string;
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-end align-items-center mb-3">
    <button class="btn btn-secondary btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilters" aria-controls="offcanvasFilters">
        <i class="bi bi-funnel"></i> Фільтри / Пошук
    </button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm ms-2">На Дашборд</a>
</div>


<table class="table table-sm table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Склад</th>
            <th>Назва товару</th>
            <th>Поточна к-ть</th>
            <th>Мін. к-ть</th>
            <th>Од. вим.</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                string trClass = ""; 
                var minimalCount = item.MinimalCount; 
                var currentCount = item.Count;       

                if (minimalCount > 0) 
                {
                    if (currentCount <= (minimalCount * 0.25M))
                    {
                        trClass = "table-danger";
                    }
                    else if (currentCount <= (minimalCount * 0.50M))
                    {
                        trClass = "table-warning";
                    }
                }
                <tr class="@trClass">
                    <td>
                        <a asp-controller="Storage" asp-action="Details" asp-route-name="@item.StorageName">
                            @item.StorageNameNavigation?.Name
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-productName="@item.ProductName">
                            @item.ProductName
                        </a>
                    </td>
                    <td>@item.Count.ToString("N2")</td>
                    <td>@item.MinimalCount.ToString("N2")</td>
                    <td>@item.ProductNameNavigation?.UnitCodeNavigation?.UnitName</td>
                    <td>
                        <a asp-controller="StorageProduct" asp-action="Edit" asp-route-storageName="@item.StorageName" asp-route-productName="@item.ProductName" class="btn btn-sm btn-outline-secondary" title="Коригувати залишок">
                            <i class="bi bi-pencil"></i> Кориг.
                        </a>
                        <a asp-controller="Invoice" asp-action="Create" asp-route-type="supply" asp-route-productName="@item.ProductName" class="btn btn-sm btn-outline-success" title="Створити постачання">
                            <i class="bi bi-plus-circle"></i> Постач.
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center text-muted">Не знайдено товарів з низькими залишками за вашими фільтрами.</td></tr> @* Оновив colspan *@
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
    @Html.PagedListPager(Model, page => Url.Action("Index", 
            new
            {
                page = page,
                filterLowStock = true, 
                searchString = currentSearch, 
                filterUnitName = currentUnitFilter
            }),
            new PagedListRenderOptions
    {
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        UlElementClasses = new[] { "pagination", "pagination-sm" },
        DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
        DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
        DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded,
        DisplayLinkToNextPage = PagedListDisplayMode.IfNeeded,
        ContainerDivClasses = new[] { "d-flex", "justify-content-center" }
    })
</div>


<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasFilters" aria-labelledby="offcanvasFiltersLabel">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title" id="offcanvasFiltersLabel">Фільтри Списку Низьких Залишків</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form asp-action="Index" method="get" id="lowStockFilterForm">
            <input type="hidden" name="filterLowStock" value="true" />

            <div class="mb-3 position-relative">
                <label for="searchStringInput" class="form-label fw-semibold">Пошук за назвою товару</label>
                <input type="text" id="searchStringInput" name="searchString" value="@currentSearch"
                       class="form-control form-control-sm" autocomplete="off"
                       data-autocomplete="true"
                       data-autocomplete-url="@Url.Action("AutocompleteStockProductName", "StorageProduct")"
                       data-autocomplete-min-length="2"
                       data-autocomplete-list-target="#stockProductNameAutocompleteList" />
                <ul id="stockProductNameAutocompleteList" class="list-group position-absolute w-100 mt-1" style="z-index: 1050; display: none;"></ul>
            </div>
            <div class="mb-3">
                <label for="unitFilterSelect" class="form-label fw-semibold">Фільтр за од. вим.</label>
                <select id="unitFilterSelect" name="filterUnitName" asp-items="@ViewBag.UnitNameFilterList" class="form-select form-select-sm">
                    <option value="">-- Всі одиниці --</option>
                </select>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Застосувати</button>
                <button type="button" class="btn btn-outline-secondary"
                        data-reset-form-target="#lowStockFilterForm">
                    Скинути Все
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}